@using LayoutResources = ITRootsTask.LocalResources.MainResource;

<!DOCTYPE html>
<html lang="@LayoutResources.Language" dir="@LayoutResources.Dir">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewBag.Title</title>
    @Html.Partial("~/Views/Shared/Partial/_GlobalVariables.cshtml")
    @Html.Partial("~/Views/Shared/Partial/_ResourcePartial.cshtml")
</head>
<body>
    <div class="loading"><img src="~/Assets/imgs/loading.svg" /></div>
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                    <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Users", "Index", "User", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Invoices", "Index", "Invoices", null, new { @class = "nav-link" })</li>
                    <li class="nav-item mx-5">
                        <a class="nav-link" href="@Url.Action("ChangeLanguage", "Base")" role="button"><i class="fas fa-globe fa-fw"></i></a>
                    </li>
                    <li class="nav-item"><a class="nav-link btn btn-outline-danger hash text-dark" href="~/Auth/Logout">Logout</a></li>
                </ul>
            </div>
        </nav>
    </div>

    <div class="container body-content">
        @RenderBody()
    </div>



    <!-- GENERAL MODAL -->
    <div class="modal" id="GeneralModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <!-- Header -->
                <div class="modal-header">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <!-- body -->
                <div class="modal-body"></div>
                <!-- footer -->
                <div class="modal-footer"></div>
            </div>
        </div>
    </div>


    <!-- GENERAL LARGE MODAL -->
    <div class="modal" id="GeneralLargeModal">
        <div class="modal-dialog" style="max-width:1000px!important;">
            <div class="modal-content">
                <!-- Header -->
                <div class="modal-header">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <!-- body -->
                <div class="modal-body"></div>
                <!-- footer -->
                <div class="modal-footer"></div>
            </div>
        </div>
    </div>


</body>
</html>
