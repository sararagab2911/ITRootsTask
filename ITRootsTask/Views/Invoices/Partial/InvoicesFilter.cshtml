
@model InvoiceFilterDTO
@using GeneralResources = ITRootsTask.LocalResources.MainResource;


<div class="shadow-bordered-div">
    <div class="d-flex justify-content-end pb-3">
        <div class="add-btn-dv">
            <a href="@Url.Action("InvoiceData","Invoices")" class="btn btn-primary form-control"><i class="fa fa-plus"></i>&nbsp;@GeneralResources.AddNewInvoice</a>
        </div>
    </div>

    <form id="InvoicesFilterForm" data-ajax="true" data-ajax-method="get" url="/Invoices/Index" data-target="#invoicesList" class="pagination-filter-form p-1">
        <div class="row">
            <div class="col-lg-3 col-sm-6 col-12">
                <div class="form-group">
                    @Html.TextBoxFor(x => x.InvoiceNumber, new { @type = "search", @class = "form-control m-1", @placeholder = GeneralResources.InvoiceNumber })
                </div>
            </div>
            <div class="col-lg-3 col-sm-12 col-12">
                <div class="form-group">
                    <button class="btn btn-primary m-1"><i class="fa fa-search"></i>&nbsp;@GeneralResources.Search</button>
                    <button type="button" class="btn btn-secondary m-1" onclick="ResetSearch(this)"><i class="fa fa-redo"></i>&nbsp;@GeneralResources.Reset</button>
                </div>
            </div>
        </div>
    </form>
</div>
